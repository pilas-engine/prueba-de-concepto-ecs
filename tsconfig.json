{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outFile": "public/pilas-engine.js"
    },
    "exclude": [
        "node_modules",
        "bower_components",
        "app",
        "dist",
        "public",
        "tmp"
    ],
    "filesGlob": [
        "pilas-engine/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
